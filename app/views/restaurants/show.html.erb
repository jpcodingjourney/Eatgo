<% end %>
<% if @next_restaurant.present? %>
  <%= link_to ">", restaurant_path(@next_restaurant), class: "userbutton btn addbutton shadow p-3 mb-5 bg-body-tertiary rounded" %>
<% end %>
</div>
    </div>
</div>

<div class="container">
    <div class="col-md text-center">
<% if @current_user.present? %>
    <% if @current_user.admin? %>
<div class="controls">
    <%= link_to 'Edit restaurant', edit_restaurant_path(@restaurant), class: "userbutton btn addbutton shadow p-3 mb-5 bg-body-tertiary rounded" %>
