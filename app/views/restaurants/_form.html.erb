<%= form_for @restaurant do |f| %>
    <div class="col-md-3">
    <%= f.label :name, :required => true %>:
    <%= f.text_field :name, class: "form-control", :autofocus => true %>
    </div>
    <br />
    <div class="col-mb-3">
    <%= f.label :address %>:
    <%= f.text_field :address, class: "form-control", :required => true %>
    </div>
    <br />

    <div class="col-md-3">
    <%= f.label :description %>:
    <%= f.text_area :description, class: "form-control", rows:5 %>
    </div>
    <br />

    <div class="col-mb-3">
    <%= f.label :website %>:
    <%= f.url_field :website, class: "form-control" %>
    </div>
    <br />

    <div class="col-mb-3">
    <%= f.label :logo %>:
    <%= f.url_field :logo, class: "form-control", :required => true %>
    </div>
    <br />

    <div class="col-mb-3">
    <%= f.label :image %>:
    <%= f.url_field :image, class: "form-control", :required => true %>
    </div>
    <br />

    <div class="col-mb-3">
    <%= f.label :city_id %>:
    <%= f.select :city_id, City.pluck(:name, :id) %>
    </div>
    <br />

    <div class="col-mb-3">
    <%= f.label :category_id %>:
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </div>
    <br /><br />
    
    <div class="container">
        <div class="col-md text-center">
    <%= f.submit %>
    </div>
    </div>
    <br /><br />
<% end %>