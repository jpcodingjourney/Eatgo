<br />

<div class="container">
        <div class="col-md text-center">
<h1>Sign in</h1>

<p>
    <%= flash[:error] %>
</p>
<br /><br /><br /><br />

<%= form_tag login_path do %>
<div class="mb-3">
    <%= label_tag :email  %>: <br />
    <%= email_field_tag :email, nil, :autofocus => true %>
</div>
<br />
<div class="mb-3">
    <%= label_tag :password %>: <br />
    <%= password_field_tag :password %>
</div>
<br /><br />
    <%= submit_tag "Sign in", class: "btn btn-primary" %>
<% end %>
       </div>
</div>